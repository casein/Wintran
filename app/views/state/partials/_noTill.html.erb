<h1>Percentage of Fields in No Till</h1>

<table>
	<thead>
		<tr>
			<th>Year</th>
			<th>Percentage</th>
		</tr>
	</thead>
	<tbody>

<% @calcYear.each do |r| %>
  <% @results = Season.active.byYear(r).noTill %>
  <% @count = Season.active.byYear(r).count.to_f  %>

		<tr>
			<td><%= r %></td>
			<td><%= '%.2f'%((@results/@count)*100) + '%' %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<br />
