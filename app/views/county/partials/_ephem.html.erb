
<h1>Percentage of fields with ephemeral erosion</h1>
<table>
	<thead>
		<tr>
			<th>Year</th>
			<th>Percentage</th>
			<th>selection</th>
			<th>total</th>
		</tr>
	</thead>
	<tbody>

<% @calcYear.each do |r| %>
  <% @eselect = Season.active.byCounty(@countyName).byYear(r).count(:conditions => ['seasonEphemErosion = ?', 1]) %>
  <% @ecount = Season.active.byCounty(@countyName).byYear(r).count.to_f %>
		<tr>
			<td><%= r %></td>
			<td><%= '%.3f'%((@eselect/@ecount)*100) + "%" %></td>
			<td><%= @eselect %></td>
			<td><%= @ecount %></td>
		</tr>
<% end %>
	</tbody>
</table>

